<div class="flex flex-col justify-center w-screen md:w-[calc(100vh)] h-[calc(100vw)]
   md:h-screen grid grid-rows-3 grid-cols-3 gap-2 p-5 md:p-10 lg:text-5xl">
  {{#each this.rows as |row rowIndex|}}
    {{#each row as |item columnIndex|}}
      <button
        type="button"
        class="rounded-full bg-purple-400 text-pink-600"
        {{on "click" (fn this.writeBoard rowIndex columnIndex)}}
      >
        <FaIcon @icon="xmark" @size="5x" />
      </button>
    {{/each}}
  {{/each}}
</div>